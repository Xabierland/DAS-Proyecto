<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Portada del libro -->
    <ImageView
        android:id="@+id/widget_book_cover"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/book_cover" />

    <!-- Información del libro -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical">

        <!-- Título del libro -->
        <TextView
            android:id="@+id/widget_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/loading" />

        <!-- Autor del libro -->
        <TextView
            android:id="@+id/widget_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Texto de recomendación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_recommendation_text"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:layout_marginTop="8dp"
            android:textStyle="italic" />

        <!-- Indicador de cronómetro activo (inicialmente oculto) -->
        <LinearLayout
            android:id="@+id/widget_timer_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#33FFFFFF"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_timer"
                android:contentDescription="@string/reading_timer" />

            <TextView
                android:id="@+id/widget_timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"
                android:text="00:00:00" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>