<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Sección superior con portada e información básica -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Portada del libro -->
                    <ImageView
                        android:id="@+id/imageViewPortada"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:background="@color/purple_200"
                        android:contentDescription="@string/book_cover" />

                    <!-- Información básica del libro -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <!-- Título del libro -->
                        <TextView
                            android:id="@+id/textViewTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/textColor" />

                        <!-- Autor del libro -->
                        <TextView
                            android:id="@+id/textViewAutor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="?attr/textColor"
                            android:layout_marginTop="8dp" />

                        <!-- Género del libro -->
                        <TextView
                            android:id="@+id/textViewGenero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp" />

                        <!-- Año de publicación -->
                        <TextView
                            android:id="@+id/textViewAnio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
                            android:layout_marginTop="8dp" />

                        <!-- Editorial -->
                        <TextView
                            android:id="@+id/textViewEditorial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
                            android:layout_marginTop="4dp" />

                        <!-- ISBN -->
                        <TextView
                            android:id="@+id/textViewIsbn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
                            android:layout_marginTop="4dp" />

                        <!-- Número de páginas -->
                        <TextView
                            android:id="@+id/textViewPaginas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?attr/textColor"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sección: Calificación y reseña del usuario (visible solo si ya está en la biblioteca) -->
                <LinearLayout
                    android:id="@+id/reviewSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/your_rating_review"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/textColor"
                        android:layout_marginBottom="8dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="?attr/cardBackgroundColor">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Calificación con estrellas -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginBottom="16dp">

                                <RatingBar
                                    android:id="@+id/ratingBarDisplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="0"
                                    android:stepSize="0.5"
                                    android:isIndicator="true"
                                    style="?android:attr/ratingBarStyleIndicator"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/textViewRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/textColor"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <!-- Reseña -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/review"
                                android:textStyle="bold"
                                android:textColor="?attr/textColor"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/textViewReview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/textColor" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Sección de descripción -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcion"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textColor"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textViewDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="?attr/textColor"
                    android:layout_marginBottom="24dp" />

                <!-- Sección para añadir a biblioteca -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/library_management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/textColor"
                    android:layout_marginBottom="16dp" />

                <!-- Botones para añadir con diferentes estados -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Botón para añadir a biblioteca -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAddToLibrary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_to_library"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>